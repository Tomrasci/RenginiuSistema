@model RenginiuSistema.Models.Event
@{
    ViewBag.Title = "EditEventView";
}

<h2>Edit event</h2>

@if (!@Html.ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @Html.ValidationSummary()
    </div>
}

@using (@Html.BeginForm("UpdateEvent", "Events"))
{
    <input type="hidden" value="@Model.Id" name="Id" />

    <div class="form-group">
        @Html.LabelFor(e => e.Name)
        @Html.TextBoxFor(e => e.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Date)
        @Html.TextBoxFor(e => e.Date, new { @class = "form-control", type = "date", Value = Model.Date.ToString("yyyy-MM-dd") })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Description)
        @Html.TextBoxFor(e => e.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Address)
        @Html.TextBoxFor(e => e.Address, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Setting)
        @Html.TextBoxFor(e => e.Setting, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Size)
        @Html.TextBoxFor(e => e.Size, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Budget)
        @Html.TextBoxFor(e => e.Budget, new { @class = "form-control", type = "number", step = ".01" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.ContactNumber)
        @Html.TextBoxFor(e => e.ContactNumber, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.TicketPrice)
        @Html.TextBoxFor(e => e.TicketPrice, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}

